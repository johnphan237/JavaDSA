<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

  <!-- Dùng để format ngày trong file log -->
  <timestamp key="byDate" datePattern="yyyy-MM-dd"/>

  <!-- Hiển thị màu trong console (Windows cần Jansi) -->
  <property name="jansi.enabled" value="true" />

  <!-- Appender: Console với màu -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <!-- <withJansi>${jansi.enabled}</withJansi> -->
    <encoder>
      <pattern>[%yellow(%thread)] %magenta(%level) %green(%logger) - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Appender: Ghi log ra file, xoay theo ngày -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/application.log</file>

    <!-- Xoay log mỗi ngày, giữ lại 7 ngày -->
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>

    <encoder>
      <pattern>[%d{HH:mm:ss.SSS}] [%thread] %-5level %logger{20} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Root logger: in ra cả console và file -->
  <root level="TRACE">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="FILE"/>
  </root>

</configuration>
